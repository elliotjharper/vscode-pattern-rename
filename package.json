{
    "name": "elltg-pattern-rename",
    "displayName": "Batch file rename (Pattern Rename)",
    "description": "Select multiple files or a folder and rename the files in batch using plain text / regex replacement.",
    "icon": "images/logo-npm-run_128.png",
    "publisher": "elltg",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/elliotjharper/vscode-pattern-rename.git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:elltg-pattern-rename.beginPatternRename"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "elltg-pattern-rename.beginPatternRename",
                    "group": "7_modification"
                }
            ]
        },
        "commands": [
            {
                "command": "elltg-pattern-rename.beginPatternRename",
                "title": "Pattern Rename"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "20.x",
        "@types/vscode": "^1.71.0",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.20.0",
        "file-loader": "^6.2.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "raw-loader": "^4.0.2",
        "ts-loader": "^9.3.1",
        "typescript": "^5.5.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "bulma": "^1.0.2"
    }
}
