{
    "name": "elltg-right-click-to-angular-component",
    "displayName": "Right click to component (Angular: ng generate)",
    "description": "Select chunk of DOM and extract it to a new angular component.",
    "publisher": "elltg",
    "version": "1.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/elliotjharper/vscode-right-click-to-component.git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:elltg-right-click-to-angular-component.extractToComponent",
        "onCommand:elltg-right-click-to-angular-component.extractToComponentSkipModuleImport"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "elltg-right-click-to-angular-component.extractToComponent",
                    "when": "resourceLangId == html && editorHasSelection",
                    "group": "9_cutcopypaste"
                },
                {
                    "command": "elltg-right-click-to-angular-component.extractToComponentSkipModuleImport",
                    "when": "resourceLangId == html && editorHasSelection",
                    "group": "9_cutcopypaste"
                }
            ]
        },
        "commands": [
            {
                "command": "elltg-right-click-to-angular-component.extractToComponent",
                "title": "Extract as Angular component"
            },
            {
                "command": "elltg-right-click-to-angular-component.extractToComponentSkipModuleImport",
                "title": "Extract as Angular component (Skip Module Import)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.71.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "ts-loader": "^9.3.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "@vscode/test-electron": "^2.1.5"
    }
}
